<div class="login">

	<form action="/User/Login/" method="post">
		<table>

			<tr>
				<th>Username</th>
				<td>
					<input class="username" name="username" type="text" />
				</td>

			</tr>

			<tr>
				<th>Password</th>
				<td>
					<input class="password" name="password" type="password" />
				</td>
			</tr>

			<tr>
				<th>&nbsp;</th>

				<td>
					<input class="button" value="Login" type="submit" />
				</td>
			</tr>

		</table>
	</form>

</div>
